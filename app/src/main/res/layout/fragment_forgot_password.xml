<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray2"
    android:isScrollContainer="true"
    android:scrollbars="none"
    tools:context="gormelof.net.sausozluk.views.entrypoint.ForgotPasswordFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_fragment_forgot_password_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/app_name"
            android:textSize="50sp"
            android:textColor="@color/gray4"
            fontPath="fonts/baloo/Baloo-Regular.ttf"
            tools:ignore="MissingPrefix"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="şifre sıfırlama süreci"
            android:textSize="25sp"
            android:textColor="@color/gray4"
            fontPath="fonts/source_sans_pro/SourceSansPro-SemiBold.ttf"
            tools:ignore="MissingPrefix"/>

        <LinearLayout
            android:id="@+id/ll_fragment_forgot_password_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e-posta'm şuydu:"
                android:textSize="15sp"
                android:textColor="@color/gray4"/>

            <EditText
                android:id="@+id/et_fragment_forgot_password_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_login_input"
                android:ems="10"
                android:hint="e-posta"
                android:textColorHint="@color/gray3"
                android:textSize="15sp"
                android:inputType="textEmailAddress"/>

            <Button
                android:id="@+id/btn_fragment_forgot_password_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="pardon ya"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:background="@drawable/bg_login_button"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="şifreni hatırladıysan "
                    android:textSize="15sp"
                    android:textColor="@color/gray4"/>

                <TextView
                    android:id="@+id/tv_fragment_forgot_password_go_login_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giriş"
                    android:textSize="16sp"
                    android:textColor="@color/green1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" sayfasına geri dön"
                    android:textSize="15sp"
                    android:textColor="@color/gray4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
