<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_item_topic_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="test topic"
        android:textColor="@color/grey900"
        android:textSize="18sp"
        fontPath="fonts/source_sans_pro/SourceSansPro-Regular.ttf"
        tools:ignore="HardcodedText,MissingPrefix"/>

    <TextView
        android:id="@+id/tv_item_topic_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="right"
        android:text="1"
        android:textColor="@color/grey900"
        android:textSize="18sp"
        fontPath="fonts/source_sans_pro/SourceSansPro-SemiBold.ttf"
        tools:ignore="HardcodedText,MissingPrefix,RtlHardcoded"/>

</LinearLayout>